{
  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1d",
            "Limit": 500
          }
        ]
      }
    ]
  },
  "IpRateLimiting": {
    "QuotaExceededResponse": {
      "Content": "{{\"Mesaj\":\"İstek limiti aşıldı.\", \"Detay\":\"İzin verilen istek sayısı {1}'de {0} istektir. {2} sonra tekrar deneyimiz.\"}}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    "RealIpHeader": "x-real-ip",
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1" ],
    "EndpointWhiteList": [ "put:/api/products" ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/products",
        "Period": "20s",
        "Limit": 2
      },

      {
        "Endpoint": "*:/api/products/*",
        "Period": "30s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "30s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1d",
        "Limit": 500
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
